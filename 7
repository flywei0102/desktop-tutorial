class Solution {
    public int reverse(int x) {
        if(x == 0) return x;
        String preString = String.valueOf(x);
        char[] charArray = preString.toCharArray();
        Boolean positive = false;
        int j = charArray.length - 1;
        int i;
        if(x > 0){
            i = 0;
            positive = true;
        }else{
            i = 1;
        }

        while(i < j){
            char c = charArray[i];
            charArray[i] = charArray[j];
            charArray[j] = c;
            i ++;
            j --;
        }
        // convert char array to int
        String s = String.valueOf(charArray);
        long ans;
        ans = Long.valueOf(s);
        int num = (int)ans;
        if(ans > Integer.MAX_VALUE || ans < Integer.MIN_VALUE) return 0;    // be careful about the edge
        return num;
            
    }
}
